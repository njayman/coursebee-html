<div style="margin: auto;">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
	<a class="nav-link" href="/">
          <img style="align-self: center center;" src="../public/logo.png" href="">
        </a>
	<h1 class="text-center mb-3"><br><br>Instructor Login</h1>
        <% include ./partials/messages %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
          </div>
          <button type="submit" style="background-color: #eeba19; border-color:#eeba19;"
            class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a style="color: #eeba19;" href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>
</div>
